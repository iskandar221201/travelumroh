---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Phone, Mail, MapPin, MessageCircle, Clock } from "lucide-react";
---

<Layout title="Kontak - AL-BAIT TOUR & TRAVEL">
    <Navbar />

    <main class="pt-20">
        <!-- Header Section -->
        <section class="bg-primary py-20 relative overflow-hidden">
            <div
                class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1591604129939-f1efa4d9f7fa?q=80&w=2070')] bg-cover bg-center opacity-10"
            >
            </div>
            <div class="container mx-auto px-4 relative z-10 text-center">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
                    Kontak Kami
                </h1>
                <p class="text-accent-light text-xl font-medium">
                    Hubungi Kami Untuk Informasi Lebih Lanjut
                </p>
            </div>
        </section>

        <section class="py-24 bg-white">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
                    <!-- Contact Info -->
                    <div>
                        <h2 class="text-3xl font-bold text-dark mb-8">
                            Informasi Kantor
                        </h2>
                        <div class="space-y-10">
                            <div class="flex gap-6">
                                <div
                                    class="w-14 h-14 bg-primary/10 rounded-2xl flex items-center justify-center text-primary flex-shrink-0"
                                >
                                    <MapPin className="w-7 h-7" />
                                </div>
                                <div>
                                    <h4
                                        class="text-xl font-bold text-dark mb-2"
                                    >
                                        Alamat Utama
                                    </h4>
                                    <p class="text-gray-600 leading-relaxed">
                                        Jl. Raya Banjarwangunan, RT.001/RW.004, <br
                                        />
                                        Kec. Mundu, Kab. Cirebon, Jawa Barat 45171
                                    </p>
                                </div>
                            </div>

                            <div class="flex gap-6">
                                <div
                                    class="w-14 h-14 bg-primary/10 rounded-2xl flex items-center justify-center text-primary flex-shrink-0"
                                >
                                    <Phone className="w-7 h-7" />
                                </div>
                                <div>
                                    <h4
                                        class="text-xl font-bold text-dark mb-2"
                                    >
                                        Telepon & WhatsApp
                                    </h4>
                                    <div class="space-y-1">
                                        <p class="text-gray-600">
                                            0231 - 222461 (Office)
                                        </p>
                                        <p class="text-gray-600">
                                            0812 2244 2100 (WhatsApp)
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="flex gap-6">
                                <div
                                    class="w-14 h-14 bg-primary/10 rounded-2xl flex items-center justify-center text-primary flex-shrink-0"
                                >
                                    <Clock className="w-7 h-7" />
                                </div>
                                <div>
                                    <h4
                                        class="text-xl font-bold text-dark mb-2"
                                    >
                                        Jam Operasional
                                    </h4>
                                    <div class="space-y-1">
                                        <p class="text-gray-600">
                                            Senin - Jumat: 08:30 - 16:30
                                        </p>
                                        <p class="text-gray-600">
                                            Sabtu: 08:30 - 13:00
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div
                            class="mt-12 p-8 bg-accent/10 rounded-3xl border border-accent/20"
                        >
                            <h4
                                class="text-xl font-bold text-dark mb-4 flex items-center gap-2"
                            >
                                <MessageCircle
                                    className="w-6 h-6 text-accent"
                                />
                                Konsultasi Cepat
                            </h4>
                            <p class="text-gray-600 mb-6">
                                Kami siap menjawab pertanyaan Anda mengenai
                                paket umroh maupun pendaftaran.
                            </p>
                            <a
                                href="https://wa.me/6281222442100"
                                target="_blank"
                                class="inline-block bg-primary text-white font-bold px-8 py-3 rounded-xl hover:bg-primary/90 transition-all"
                            >
                                Chat via WhatsApp
                            </a>
                        </div>
                    </div>

                    <!-- Map -->
                    <div
                        class="h-[500px] lg:h-auto rounded-[2.5rem] overflow-hidden shadow-2xl border-8 border-gray-50"
                    >
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d126743.585859!2d108.5!3d-6.75!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNsKwNDUnMDAuMCJTIDEwOMKwMzAnMDAuMCJF!5e0!3m2!1sen!2sid!4v1625!5m2!1sen!2sid"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"
                            class="w-full h-full"></iframe>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
