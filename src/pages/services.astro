---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Packages from "../components/Services.astro";
import Footer from "../components/Footer.astro";
import { Sparkles, Star, Calendar } from "lucide-react";
---

<Layout title="Paket Umroh - AL-BAIT TOUR & TRAVEL">
    <Navbar />

    <main class="pt-20">
        <!-- Header Section -->
        <section class="bg-primary py-20 relative overflow-hidden">
            <div
                class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1591604129939-f1efa4d9f7fa?q=80&w=2070&auto=format&fit=crop')] bg-cover bg-center opacity-30"
            >
            </div>
            <div class="container mx-auto px-4 relative z-10 text-center">
                <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
                    Pilihan Paket Umroh
                </h1>
                <p class="text-accent-light text-xl font-medium">
                    Pilih Perjalanan Ibadah yang Sesuai Dengan Kebutuhan Anda
                </p>
            </div>
        </section>

        <Packages />

        <!-- Promo/Information Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-4">
                <div
                    class="bg-dark rounded-[3rem] p-12 md:p-20 relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 right-0 w-96 h-96 bg-primary/20 rounded-full blur-[100px] -mr-48 -mt-48"
                    >
                    </div>
                    <div
                        class="absolute bottom-0 left-0 w-96 h-96 bg-accent/10 rounded-full blur-[100px] -ml-48 -mb-48"
                    >
                    </div>

                    <div
                        class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center relative z-10"
                    >
                        <div>
                            <h2
                                class="text-3xl md:text-4xl font-bold text-white mb-6"
                            >
                                Kenapa Memilih Paket Kami?
                            </h2>
                            <div class="space-y-6">
                                <div class="flex gap-4">
                                    <div
                                        class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center text-accent"
                                    >
                                        <Sparkles className="w-6 h-6" />
                                    </div>
                                    <div>
                                        <h4
                                            class="text-lg font-bold text-white mb-2"
                                        >
                                            Fasilitas Premium
                                        </h4>
                                        <p class="text-gray-400">
                                            Hotel berbintang yang sangat dekat
                                            dengan pelataran Masjidil Haram &
                                            Masjid Nabawi.
                                        </p>
                                    </div>
                                </div>
                                <div class="flex gap-4">
                                    <div
                                        class="w-12 h-12 bg-white/5 rounded-xl flex items-center justify-center text-accent"
                                    >
                                        <Star className="w-6 h-6" />
                                    </div>
                                    <div>
                                        <h4
                                            class="text-lg font-bold text-white mb-2"
                                        >
                                            Bimbingan Intensif
                                        </h4>
                                        <p class="text-gray-400">
                                            Program manasik yang lengkap agar
                                            jamaah memahami rukun dan wajib
                                            umroh dengan benar.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div
                            class="bg-white/5 backdrop-blur-sm p-8 rounded-3xl border border-white/10"
                        >
                            <Calendar className="w-12 h-12 text-accent mb-6" />
                            <h3 class="text-2xl font-bold text-white mb-4">
                                Daftar Sekarang untuk Keberangkatan 2024 - 2025
                            </h3>
                            <p class="text-gray-300 mb-8">
                                Dapatkan harga promo khusus untuk pendaftaran
                                grup atau keluarga. Seat terbatas untuk setiap
                                jadwal!
                            </p>
                            <a
                                href="https://wa.me/6285219762885"
                                class="inline-block bg-accent hover:bg-accent-light text-dark font-bold px-10 py-4 rounded-xl transition-all w-full text-center"
                            >
                                Cek Ketersediaan Seat
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
