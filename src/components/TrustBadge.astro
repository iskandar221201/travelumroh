---
import { ShieldCheck, Award, Star } from "lucide-react";
---

<div class="fixed left-6 bottom-32 z-40 hidden xl:block animate-fade-in-left">
    <div
        class="bg-white/90 backdrop-blur-md border border-gray-100 rounded-2xl shadow-2xl p-4 flex flex-col gap-4 max-w-[200px]"
    >
        <div class="flex items-center gap-3">
            <div
                class="w-10 h-10 bg-primary/10 rounded-xl flex items-center justify-center text-primary"
            >
                <ShieldCheck className="w-6 h-6" />
            </div>
            <div>
                <p
                    class="text-[10px] uppercase tracking-widest font-black text-gray-400"
                >
                    PPIU Resmi
                </p>
                <p class="text-xs font-bold text-dark">91204049913930001</p>
            </div>
        </div>

        <div class="h-px bg-gray-100 w-full"></div>

        <div class="flex items-center gap-3">
            <div
                class="w-10 h-10 bg-accent/10 rounded-xl flex items-center justify-center text-accent"
            >
                <Award className="w-6 h-6" />
            </div>
            <div>
                <p
                    class="text-[10px] uppercase tracking-widest font-black text-gray-400"
                >
                    Kualitas
                </p>
                <p class="text-xs font-bold text-dark">Layanan Bintang 5</p>
            </div>
        </div>

        <div class="flex items-center gap-1 mt-1">
            {
                [1, 2, 3, 4, 5].map(() => (
                    <Star className="w-3 h-3 fill-accent text-accent" />
                ))
            }
        </div>
    </div>
</div>

<style>
    @keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    .animate-fade-in-left {
        animation: fadeInLeft 1s ease-out forwards;
    }
</style>
