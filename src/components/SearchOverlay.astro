            </p>
        </div>
    </div>
</div>

<script>
    import { SearchController } from "../scripts/search-controller";
    import searchData from "../assets/search-data.json";

    const WHATSAPP_NUMBER = "6285219762885";

    // Dynamic import for Fuse.js
    let Fuse: any;
    const init = async () => {
        try {
            const FUSE_URL =
                "https://cdn.jsdelivr.net/npm/fuse.js@7.0.0/dist/fuse.mjs";
            // @ts-ignore
            const FuseModule = await import(/* @vite-ignore */ FUSE_URL as any);
            Fuse = FuseModule.default;
        } catch (e) {
            console.warn("Fuse.js not available");
        }

        // Initialize the Search Controller
        new SearchController(searchData as any, Fuse, WHATSAPP_NUMBER);
    };

    init();
</script>

<style>
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
