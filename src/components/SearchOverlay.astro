            <p
                class="text-center text-[10px] text-gray-400 mt-4 uppercase tracking-widest font-bold"
            >
                Tekan <span class="text-gray-600">Enter</span> untuk mengirim
            </p>
        </div>
    </div>
</div>

<script type="module" define:vars={{ searchData, WHATSAPP_NUMBER }}>
    // Dynamic imports for AI libraries
    let Fuse, nlp;

    try {
        const FuseModule =
            await import("https://cdn.jsdelivr.net/npm/fuse.js@7.0.0/dist/fuse.mjs");
        Fuse = FuseModule.default;
        console.log("‚úÖ Fuse.js loaded");
    } catch (e) {
        console.warn("Fuse.js not available");
    }

    try {
        const compromiseModule =
            await import("https://cdn.jsdelivr.net/npm/compromise@14.10.0/+esm");
        nlp = compromiseModule.default;
        console.log("‚úÖ Compromise.js NLP loaded");
    } catch (e) {
        console.warn("Compromise.js not available");
    }

    const overlay = document.getElementById("search-overlay");
    const input = document.getElementById("search-input");
    const sendBtn = document.getElementById("send-btn");
    const closeBtn = document.getElementById("close-search");
    const chatContainer = document.getElementById("chat-container");
    const messagesList = document.getElementById("messages-list");
    const typingIndicator = document.getElementById("typing-indicator");
    const quickLinks = document.querySelectorAll(".quick-link-chip");
    const welcomeMsg = document.querySelector(".assistant-bubble");

    // AI Context & Sales State
    let conversationContext = {
        lastMatchedItem: null,
        interactionCount: 0,
        shownUpsell: false,
        shownLeadCapture: false,
    };

    const testimonials = [
        { name: "Bu Siti", city: "Cirebon", text: "Pelayanannya luar biasa!" },
        {
            name: "Pak Ahmad",
            city: "Jakarta",
            text: "Pembimbing sangat berpengalaman!",
        },
        {
            name: "Ibu Rina",
            city: "Bandung",
            text: "Makanannya enak, menu Indonesia!",
        },
    ];

    async function downloadImage(url, filename) {
        try {
            const response = await fetch(url);
            const blob = await response.blob();
            const blobUrl = window.URL.createObjectURL(blob);
            const a = document.createElement("a");
            a.href = blobUrl;
            a.download = filename || "download.jpg";
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(blobUrl);
        } catch (error) {
            console.error("Download failed:", error);
            window.open(url, "_blank");
        }
    }
    // Expose to window for inline onclick handler
    window.downloadImage = downloadImage;

    // NLP Helper: Extract entities from query
    function extractEntities(query) {
        const base = {
            hasNegation: /\b(tidak|gak|ga|belum|bukan|jangan)\b/i.test(query),
            hasPrice: /\b(harga|biaya|tarif|bayar|berapa|mahal|murah)\b/i.test(
                query,
            ),
            hasTime:
                /\b(kapan|bulan|minggu|hari|jadwal|tanggal|maret|april|mei)\b/i.test(
                    query,
                ),
            hasLocation: /\b(dimana|mana|lokasi|alamat|kantor|tempat)\b/i.test(
                query,
            ),
            isQuestion: query.includes("?"),
        };

        if (!nlp) return base;

        const doc = nlp(query);
        return {
            ...base,
            nouns: doc.nouns().out("array"),
            verbs: doc.verbs().out("array"),
            isQuestion: doc.questions().length > 0 || query.includes("?"),
        };
    }

    // Initialize Fuse.js
    let fuse;
    if (Fuse) {
        fuse = new Fuse(searchData, {
            keys: [
                { name: "title", weight: 0.5 },
                { name: "keywords", weight: 0.3 },
                { name: "description", weight: 0.2 },
            ],
            threshold: 0.4,
            includeScore: true,
        });
    }

    function openSearch() {
        overlay.classList.remove("hidden");
        setTimeout(() => {
            overlay.classList.remove("opacity-0");
            input.focus();
            welcomeMsg.classList.remove("opacity-0", "translate-y-4");
        }, 10);
        document.body.style.overflow = "hidden";
    }

    function closeSearch() {
        overlay.classList.add("opacity-0");
        setTimeout(() => {
            overlay.classList.add("hidden");
            input.value = "";
        }, 300);
        document.body.style.overflow = "";
    }

    function formatText(text) {
        return text.replace(
            /\*\*(.*?)\*\*/g,
            '<span class="font-bold text-primary">$1</span>',
        );
    }

    function formatPrice(price, days) {
        return `Rp ${Math.round(price / days).toLocaleString("id-ID")}/hari`;
    }

    function getRandomTestimonial() {
        return testimonials[Math.floor(Math.random() * testimonials.length)];
    }

    function highlightSection(sectionId) {
        const id = sectionId.startsWith("#")
            ? sectionId.substring(1)
            : sectionId;
        const section = document.getElementById(id);
        if (section) {
            section.classList.add("search-highlight");
            setTimeout(
                () => section.classList.remove("search-highlight"),
                3000,
            );
        }
    }

    function scrollToBottom() {
        chatContainer.scrollTo({
            top: chatContainer.scrollHeight,
            behavior: "smooth",
        });
    }

    function addUserMessage(text) {
        const div = document.createElement("div");
        div.className =
            "flex justify-end gap-4 opacity-0 translate-y-2 transition-all duration-300";
        div.innerHTML = `<div class="bg-primary text-white p-4 rounded-2xl rounded-tr-none shadow-lg max-w-[85%]"><p class="text-sm md:text-base font-medium">${text}</p></div>`;
        messagesList.appendChild(div);
        setTimeout(
            () => div.classList.remove("opacity-0", "translate-y-2"),
            10,
        );
        scrollToBottom();
    }

    function addAssistantMessage(query, results, intent) {
        conversationContext.interactionCount++;
        const div = document.createElement("div");
        div.className =
            "flex gap-4 opacity-0 translate-y-2 transition-all duration-500";

        let responseHTML = "";
        let extras = "";
        const packageContext = (
            results.length > 0 ? results : searchData
        ).filter((r) => r.category === "Paket");

        // Follow-up detection
        const isFollowUp =
            conversationContext.lastMatchedItem &&
            (query.toLowerCase().includes("harga") ||
                query.toLowerCase().includes("biaya") ||
                query.toLowerCase().includes("fasilitas"));

        if (intent === "termurah" && packageContext.length > 0) {
            const cheapest = [...packageContext].sort(
                (a, b) =>
                    (a.price_numeric || Infinity) -
                    (b.price_numeric || Infinity),
            )[0];
            responseHTML = `<p class="text-sm md:text-base">Paket **${cheapest.title}** adalah pilihan **termurah** kami. Hanya **${formatPrice(cheapest.price_numeric, 9)}** untuk pengalaman ibadah tak ternilai!</p>`;
            conversationContext.lastMatchedItem = cheapest;
            if (!conversationContext.shownUpsell) {
                const vip = searchData.find((p) => p.title.includes("VIP"));
                if (vip) {
                    extras += `<div class="mt-3 p-3 bg-primary/5 border border-primary/20 rounded-xl"><p class="text-xs text-dark">üí° Banyak jamaah upgrade ke **Paket VIP** - selisihnya hanya Rp ${Math.round((vip.price_numeric - cheapest.price_numeric) / 9).toLocaleString("id-ID")}/hari!</p></div>`;
                    conversationContext.shownUpsell = true;
                }
            }
        } else if (intent === "rekomendasi" && packageContext.length > 0) {
            const recommended =
                packageContext.find((r) => r.is_recommended) ||
                packageContext[0];
            const testimonial = getRandomTestimonial();
            responseHTML = `<p class="text-sm md:text-base">Saya rekomendasikan **${recommended.title}** - paling banyak dipilih jamaah!</p>`;
            extras += `<div class="mt-3 p-3 bg-green-50 border border-green-200 rounded-xl"><p class="text-xs text-green-800">‚≠ê "${testimonial.text}" ‚Äî <strong>${testimonial.name}</strong>, ${testimonial.city}</p></div>`;
            conversationContext.lastMatchedItem = recommended;
        } else if (intent === "paket_reguler") {
            const reguler = searchData.find((p) => p.title.includes("Reguler"));
            if (reguler) {
                responseHTML = `<p class="text-sm md:text-base">**Paket Reguler 9 Hari** adalah pilihan ekonomis kami dengan fasilitas hotel **bintang 3**. Harga: **Rp 25.000.000** (hanya ${formatPrice(reguler.price_numeric, 9)}). Cocok untuk Anda yang ingin umroh dengan biaya terjangkau!</p>`;
                results = [reguler];
                conversationContext.lastMatchedItem = reguler;
            }
        } else if (intent === "paket_vip") {
            const vip = searchData.find((p) => p.title.includes("VIP"));
            if (vip) {
                responseHTML = `<p class="text-sm md:text-base">**Paket VIP 12 Hari** adalah paket terlaris kami! Hotel **bintang 4** dekat Masjidil Haram, durasi lebih lama untuk ibadah maksimal. Harga: **Rp 35.000.000** (hanya ${formatPrice(vip.price_numeric, 12)}). üåü Rekomendasi terbaik!</p>`;
                results = [vip];
                conversationContext.lastMatchedItem = vip;
            }
        } else if (intent === "paket_eksklusif") {
            const eksklusif = searchData.find((p) =>
                p.title.includes("Eksklusif"),
            );
            if (eksklusif) {
                responseHTML = `<p class="text-sm md:text-base">**Paket Eksklusif 9 Hari** adalah paket premium dengan hotel **bintang 5** tepat di depan Masjidil Haram + pesawat **business class**. Harga: **Rp 55.000.000** (${formatPrice(eksklusif.price_numeric, 9)}) untuk pengalaman ibadah termewah! ‚ú®</p>`;
                results = [eksklusif];
                conversationContext.lastMatchedItem = eksklusif;
            }
        } else if (intent === "legalitas") {
            responseHTML = `<p class="text-sm md:text-base">**Al-Bait Tour & Travel** adalah travel **resmi** terdaftar di Kemenag RI dengan **SK PPIU No. 91204049913930001**. Anda bisa verifikasi di website Kemenag. Ibadah Anda aman bersama kami! ‚úÖ</p>`;
            results = searchData
                .filter((item) => item.category === "Legalitas")
                .slice(0, 1);
        } else if (intent === "ketersediaan") {
            responseHTML = `<p class="text-sm md:text-base">Alhamdulillah, **kami masih ada slot** untuk keberangkatan terdekat! üéâ Tapi kuota terbatas - segera amankan kursi Anda!</p>`;
            extras += `<div class="mt-3 p-3 bg-amber-50 border border-amber-200 rounded-xl"><p class="text-xs text-amber-800">üî• <strong>PROMO:</strong> Daftar sekarang GRATIS koper eksklusif!</p></div>`;
            results = packageContext.slice(0, 3);
        } else if (intent === "kontak") {
            responseHTML = `<p class="text-sm md:text-base">Mencari info kontak <strong>Al-Bait Tour & Travel</strong>? Kami siap melayani Anda sepenuh hati!</p>
            <div class="space-y-3 mt-2">
                <div class="flex gap-2">
                    <span class="text-lg">üìç</span>
                    <div>
                        <p class="font-bold text-dark text-xs uppercase tracking-wide mb-1">Kantor Pusat</p>
                        <p class="text-sm">Jl. Siliwangi No. 123, Kota Cirebon, Jawa Barat 45123<br/><span class="text-xs text-gray-500">(Buka Senin-Sabtu, 08.00 - 17.00 WIB)</span></p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <span class="text-lg">üìû</span>
                    <div>
                        <p class="font-bold text-dark text-xs uppercase tracking-wide mb-1">Layanan 24 Jam</p>
                        <p class="text-sm">Siap konsultasi via WhatsApp kapan saja.</p>
                    </div>
                </div>
            </div>`;

            extras += `<div class="mt-4"><a href="https://wa.me/${WHATSAPP_NUMBER}?text=Assalamualaikum, saya ingin konsultasi paket umroh" target="_blank" class="flex items-center justify-center gap-2 bg-[#25D366] text-white px-5 py-3 rounded-xl font-bold hover:brightness-95 transition-all shadow-md w-full"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg> Chat WhatsApp Admin</a></div>`;

            results = searchData
                .filter((item) => item.category === "Kontak")
                .slice(0, 1);
        } else if (intent === "manasik") {
            const manasik = searchData.find((item) =>
                item.title.includes("Manasik"),
            );
            if (manasik) {
                responseHTML = `<p class="text-sm md:text-base">Info tentang **${manasik.title}**:</p>`;
                if (manasik.answer) {
                    responseHTML += `<p class="text-sm md:text-base font-bold text-primary mt-2 bg-primary/5 p-3 rounded-lg border-l-4 border-primary">${manasik.answer}</p>`;
                } else {
                    responseHTML += `<p class="text-sm md:text-base mt-2">${manasik.description}</p>`;
                }
                results = [manasik];
            }
        } else if (intent === "alamat") {
            responseHTML = `<p class="text-sm md:text-base">Lokasi kami sangat strategis di pusat Kota Cirebon. Silakan ikuti peta berikut:</p>`;
            const location = searchData.find(
                (item) => item.category === "Kontak",
            );
            if (location && location.image_url) {
                extras += `<div class="mt-3 rounded-xl overflow-hidden shadow-md border border-gray-100"><img src="${location.image_url}" alt="Lokasi Kantor" class="w-full h-40 object-cover hover:scale-105 transition-transform duration-500 cursor-pointer" onclick="window.open('https://maps.google.com/?q=Al-Bait+Tour+Travel+Cirebon', '_blank')"/></div><p class="text-[10px] text-gray-400 mt-2 text-center">Klik peta untuk membuka Google Maps</p>`;
            }
            results = [location];
        } else if (isFollowUp) {
            const item = conversationContext.lastMatchedItem;
            responseHTML = `<p class="text-sm md:text-base">Melanjutkan tentang **${item.title}**: ${item.description}</p>`;
        } else if (results.length > 0) {
            const topResult = results[0];

            // Special handling for Greetings: Direct natural response
            if (topResult.category === "Sapaan") {
                responseHTML = `<p class="text-sm md:text-base font-medium text-dark">${topResult.answer || topResult.description}</p>`;
            } else {
                responseHTML = `<p class="text-sm md:text-base">Saya menemukan info tentang **${topResult.title}**:</p>`;
                if (topResult.answer) {
                    responseHTML += `<p class="text-sm md:text-base font-bold text-primary mt-2 bg-primary/5 p-3 rounded-lg border-l-4 border-primary">${topResult.answer}</p>`;
                    if (topResult.answer.includes("WhatsApp")) {
