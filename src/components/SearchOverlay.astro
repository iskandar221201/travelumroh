                                <button
                                    class="quick-link-chip px-4 py-2 bg-white hover:bg-primary hover:text-white rounded-full text-xs font-bold text-gray-600 transition-all border border-gray-200 hover:border-primary shadow-sm flex items-center gap-2"
                                    data-query={link.query}
                                >
                                    {link.title}
                                    <ArrowRight className="w-3 h-3" />
                                </button>
                            ))
                        }
                    </div>
                </div>
            </div>

            <div id="messages-list" class="space-y-6"></div>

            <!-- Typing Indicator -->
            <div
                id="typing-indicator"
                class="flex gap-4 hidden opacity-0 transition-opacity duration-300"
